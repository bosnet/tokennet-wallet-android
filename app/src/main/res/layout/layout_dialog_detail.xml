<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/titile"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/light_navy_two">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:textColor="@color/white"
            android:gravity="center_horizontal"
            android:layout_centerInParent="true"
            android:text="@string/detail"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/txt_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textColor="@color/brownish_grey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="85dp"
        android:layout_marginLeft="20dp"
        android:text="@string/d_date"

        />

    <TextView
        android:id="@+id/txt_daytime"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_date"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="85dp"
        android:layout_marginRight="30dp"
        tools:text="April 20, 2018 08:32"
        />

    <TextView
        android:id="@+id/txt_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textColor="@color/brownish_grey"
        app:layout_constraintTop_toBottomOf="@+id/txt_daytime"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="@+id/txt_date"
        android:text="@string/d_type"
        />

    <TextView
        android:id="@+id/type_property"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@+id/txt_type"
        android:layout_marginRight="30dp"
        app:layout_constraintStart_toStartOf="@+id/txt_daytime"
        tools:text="Sent"
        />

    <TextView
        android:id="@+id/txt_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textColor="@color/brownish_grey"
        app:layout_constraintTop_toBottomOf="@+id/type_property"
        app:layout_constraintStart_toStartOf="@+id/txt_type"
        android:layout_marginTop="24dp"
        android:text="@string/d_from"
        />

    <TextView
        android:id="@+id/from_key"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@+id/type_property"
        app:layout_constraintTop_toBottomOf="@+id/type_property"

        android:layout_marginTop="24dp"
        android:layout_marginRight="30dp"

        android:gravity="left"
        tools:text="BOSPOQKEORKDJSKLDJAKSDLFSKDFKSDFKSDFKSKDFSKKDKQKQKQDJCNCMZLLIQKDKAJSDKA1"
        />

    <TextView
        android:id="@+id/txt_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textColor="@color/brownish_grey"
        app:layout_constraintStart_toStartOf="@+id/txt_from"
        app:layout_constraintTop_toBottomOf="@+id/from_key"
        android:layout_marginTop="24dp"
        android:text="@string/d_to"
        />

    <TextView
        android:id="@+id/to_key"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/from_key"
        app:layout_constraintTop_toBottomOf="@+id/from_key"

        android:layout_marginTop="24dp"
        android:layout_marginRight="30dp"

        android:gravity="left"
        tools:text="BOSPOQKEORKDJSKLDJAKSDLFSKDFKSDFKSDFKSKDFSKKDKQKQKQDJCNCMZLLIQKDKAJSDKA1"
        />

    <TextView
        android:id="@+id/txt_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textColor="@color/brownish_grey"
        app:layout_constraintTop_toBottomOf="@+id/to_key"
        app:layout_constraintStart_toStartOf="@+id/txt_to"
        android:layout_marginTop="24dp"
        android:text="@string/d_amount"
        />

    <TextView
        android:id="@+id/ammount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/to_key"
        app:layout_constraintStart_toStartOf="@+id/to_key"

        android:layout_marginTop="24dp"
        android:layout_marginRight="30dp"
        tools:text="2,350 BOS"
        />



    <TextView
        android:id="@+id/btn_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal"
        android:textColor="@color/cerulean"
        android:gravity="center_horizontal"
        android:text="@string/ok"
        app:layout_constraintTop_toBottomOf="@+id/ammount"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="20dp"
        />
</android.support.constraint.ConstraintLayout>
