<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.boscoin.toknenet.wallet">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="false"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".MainActivity" />
        <activity
            android:name=".CreateWalletActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".RecoveryQRActivity" />
        <activity
            android:name=".ImportActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".SmallCaptureActivity" />
        <activity
            android:name=".WalletListActivity"
            android:theme="@style/NoTitle" />
        <activity android:name=".SendActivity" />
        <activity android:name=".WalletHistoryActivity" />
        <activity
            android:name=".WalletOrderActivity"
            android:label="@string/title_activity_wallet_order"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ReceiveActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".SplashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".PreCautionOneActivity" />
        <activity android:name=".PreCautionTwoActivity" />
        <activity android:name=".PreCationThreeActivity" />
        <activity android:name=".CreateNoticeActivity" />

        <activity android:name=".PopupActivity" />
